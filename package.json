{
  "name": "@ctrlbrk/ctbk-opencode-notifier",
  "version": "1.0.2",
  "description": "OpenCode plugin that sends system notifications and plays sounds when permission is needed, generation completes, or errors occur. Forked from @mohak34/opencode-notifier",
  "author": "ctrlbrk",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ctbk/opencode-notifier.git"
  },
  "homepage": "https://github.com/ctbk/opencode-notifier#readme",
  "bugs": {
    "url": "https://github.com/ctbk/opencode-notifier/issues"
  },
  "files": [
    "dist",
    "sounds"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --config .eslintrc.cjs . --ext .ts"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "notifications",
    "sound",
    "alerts"
  ],
  "dependencies": {
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0.224",
    "@types/node": "^22.0.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.55.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  }
}
